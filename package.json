{
  "name": "@greenyouse/book-to-audio",
  "version": "0.1.0",
  "description": "Convert books to audio files",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "packageManager": "yarn@4.5.0",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --external:pdf-parse",
    "start": "node dist/index.js",
    "lint": "eslint src && yarn format",
    "lint:fix": "eslint src --fix && yarn format",
    "format": "prettier --write .",
    "postinstall": "yarn pnpify --sdk"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@yarnpkg/pnpify": "^2.4.0",
    "esbuild": "^0.23.1",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "~5.5.0"
  },
  "dependencies": {
    "epub2": "^3.0.2",
    "html-to-text": "^9.0.5",
    "pdf-parse": "^1.1.1"
  }
}